@Library('Jenkins-shared-library')_

pipeline{
    agent any
    parameters(
    choice (name:'action' ,choice:'create\ndelte' ,description:'choose create/Destroy')
)
    stages{
        when{expression{param.action == 'create'}}
        stage("Git checkout"){
            steps{
                script{
                    gitCheckout(
                        branch: "master",
                        url: "https://github.com/sgoyal696/Java_Project.git"
                        )
                }
            }
        } 
        stage("Unit testing"){
            when{expression{param.action == 'create'}}
            steps{
                script{
                    mvnTest()
                }
            }
        }
        stage("Integration testing"){
            when{expression{param.action == 'create'}}
            steps{
                script{
                    mvnUnitTest()
                }
            }
        }
    }
}

