@Library('Jenkins-shared-library')_

pipeline{
    agent any
    stages{
        stage("Git checkout"){
            steps{
                script{
                    gitCheckout(
                        branch: "master",
                        url: "https://github.com/sgoyal696/Java_Project.git"
                        )
                }
            }
        } stage("Unit testing"){
            steps{
                script{
                    mvnTest()
                }
            }
        }
        stage("Integration testing"){
            steps{
                script{
                    mvnUnitTest()
                }
            }
        }
    }
}

